{
  "extends": "@augu/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "reflect-metadata"],
    "skipLibCheck": true,
    "outDir": "build/",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
